<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Apply default style for dialogs -->
        <item name="android:dialogTheme">@style/AppDialogTheme</item>
    </style>

    <!-- Define your custom dialog theme here extending from base -->
    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Define window properties as desired -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="BlackFont">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/mid_font_size</item>
    </style>
    <style name="BlackFont.Big">
        <item name="android:textSize">@dimen/big_font_size</item>
    </style>
    <style name="WhiteFont">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/mid_font_size</item>
    </style>
    <style name="WhiteFont.Big">
        <item name="android:textSize">@dimen/big_font_size</item>
    </style>

</resources>
